@import "_variables.styl"

.vue-phone-input__wrapper
  {flex-row}
  min-height min-height
  min-width min-width
  width min-width

  input
    border none
    width 100%

    [name="phone_number"].is-valid
      colorize('green', true)

    &[name="phone_number"]:not(.is-valid)
      colorize('red', true)

  div
    position relative
    width min-width

    div
      {flex-row}
      colorize('text')
      align-items center
      font-style italic
      min-width 42px
      text-align center
      width 42px

    input
      height min-height
      min-height min-height
      outline none

    .list-wrapper
      box-shadow 2px 3px 10px -2px
      position absolute
      height min-height + list-options-height
      top 100%
      width 100%

      input, ul
        display flex
        flex-direction column
        margin 0
        padding 0
        width list-width

      ul
        colorize('grey', true)
        font-style italic
        list-style-type none
        margin-block-end unset
        margin-block-start unset
        height list-options-height
        overflow auto
        padding-inline-end unset
        padding-inline-start unset
        margin 0
        position absolute
        z-index 10

        li
          display inline-flex
          flex-direction row
          text-align start
          height 42px
          min-height 42px
          padding 0 5px

          span.flag
            align-self center

          span:nth-child(2)
            display flex
            flex-direction column

            span:last-child
              font-size 10px

          &.active
            colorize('active', true)

          //span
          //  display inline-flex
          //  flex-direction column
          //
          //  ^[0]span
          //    align-items center
          //
          //  ^[1]span
          //    width 100%
          //
          //  span
          //    color text-active-color !important

        li:hover
          colorize('grey', true)
          cursor pointer

  .list-enter-active, .list-leave-active, .list-move
    transition all .5s cubic-bezier(.55, 0, .1, 1)

  .list-enter
    opacity 0
    transform scale(0)

  .list-leave-active
    opacity 0
    position absolute
    transform scale(0)

  .slide-fade-enter-active, .slide-fade-leave-active, .slide-fade-move
    transition all .3s ease

  .slide-fade-enter
    transition all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0)

  .slide-fade-active
    transform translateX(10px)
    opacity 0
